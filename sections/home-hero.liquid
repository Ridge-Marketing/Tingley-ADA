<div class="slide-wrap">
<div class="hero-slider">
  {% for block in section.blocks %}
	<div class="hero-slide hero-text-{{ block.settings.hero_text_color }} hero-slide-{{ block.id }}" style="background-image: url({{ block.settings.hero_bg_image | img_url: 'master' }})">
      <div class="container">
        <div class="text-wrapper">
      	<h2>{{ block.settings.hero_heading }}</h2>
      	<p>{{ block.settings.hero_sub_heading }}</p>
        <div class="hero-btn-row">
      		<a href="{{ block.settings.hero_button_url }}" class="btn btn--{{ block.settings.hero_button_scheme }}">{{ block.settings.hero_button_text }}</a>
          	{% if block.settings.hero_button_text2 == blank %}
	        {% else %}
          		<a href="{{ block.settings.hero_button_url2 }}" class="btn btn--{{ block.settings.hero_button_scheme2 }}">{{ block.settings.hero_button_text2 }}</a>
          	{% endif %}
        </div>
        </div>
      </div>
	</div>
  {% endfor %}
</div>
  <div class="arrows">
  </div>
</div>

{% schema %}
  {
    "name": "Hero Carousel",
	"blocks": [{
		"type": "image",
      	"name": "Hero slide",
		"settings": [
          {
            "type": "image_picker",
            "id": "hero_bg_image",
            "label": "Background Image"
          },
          {
            "type": "text",
            "id": "hero_heading",
            "label": "Heading"
          },
		  {
            "type": "text",
            "id": "hero_sub_heading",
            "label": "Sub Heading"
          },
		  {
             "type":      "select",
             "id":        "hero_text_color",
             "label":     "Text Color",
             "options": [
               {
                 "value": "white",
                 "label": "White"
               },
               {
                 "value": "black",
                 "label": "Black"
               }
             ],
             "default":   "white"
          },
		  {
            "type": "text",
            "id": "hero_button_text",
            "label": "Button Text"
          },
		  {
            "type": "url",
            "id": "hero_button_url",
            "label": "Button Url"
          },
		  {
             "type":      "select",
             "id":        "hero_button_scheme",
             "label":     "Button Color Scheme",
             "options": [
               {
                 "value": "red",
                 "label": "Red Background"
               },
               {
                 "value": "white",
                 "label": "White Background"
               }
             ],
             "default":   "red"
          },
		  {
            "type": "text",
            "id": "hero_button_text2",
            "label": "Button Text 2"
          },
		  {
            "type": "url",
            "id": "hero_button_url2",
            "label": "Button Url 2"
          },
		  {
             "type":      "select",
             "id":        "hero_button_scheme2",
             "label":     "Button Color Scheme 2",
             "options": [
               {
                 "value": "red",
                 "label": "Red Background"
               },
               {
                 "value": "white",
                 "label": "White Background"
               }
             ],
             "default":   "red"
          }
		]
	}],
"presets": [{
    "name": "Hero Carousel",
    "category": "Image",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
  }
{% endschema %}
