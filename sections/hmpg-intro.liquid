<section class="homepage-section homepage-intro index-section" data-section-id="{{ section.id }}" >
  <div class="row bucket-links">
    <div class="desktop-6 tablet-6 mobile-3 text-center">
      <div class="bucket-link">
        <a href="https://www.tingleyrubber.com/pages/shop-all-boots" style="max-width:637px;">shop boots</a>
      	<img src="https://cdn.shopify.com/s/files/1/0085/7807/2634/files/Home-Page_Button-Images_03.jpg?v=1599231528"/>
      </div>
    </div>
    <div class="desktop-6 tablet-6 mobile-3 text-center">
      <div class="bucket-link">
        <a href="https://www.tingleyrubber.com/pages/shop-all-apparel" style="max-width:636px;">shop apparel</a>
        <img src="https://cdn.shopify.com/s/files/1/0085/7807/2634/files/Home-Page_Button-Images_01.jpg?v=1599231528"/>
      </div>
    </div>
  </div>
  <div class="row">

    <div class="desktop-12 tablet-6 mobile-3">

      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading | escape }}</h2>
      {% endif %}

      <div class="pages-content">
          <p class="rte text-center">
            {{ section.settings.rich_text }}
          </p>
      </div>
      <div class="text-center">
        <a href="https://www.tingleyrubber.com/pages/about-us" class="easteregg-link">
     	 &nbsp;
        </a>
      </div>

    </div>
  </div>
</section>


{% schema %}
{
  "name": "Homepage Intro",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome"
    },
      {
        "type": "richtext",
        "id": "rich_text",
        "label": "Text",
        "info": "Use basic HTML to format text",
        "default": "<p>Use this section to tell customers about your store or add content from one of your pages which makes it easy to add images, video or any other content.</p>"
      }
   ],
   "presets":[
      {
       "name":"Homepage Intro",
       "category":"Text"
      }
   ]
}
{% endschema %}
