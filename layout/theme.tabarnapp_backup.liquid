height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
  {% include 'timber-cart' %}
  {% section 'mobile-navigation' %}
  <div class="shifter-page{% if settings.ajax_cart_method == 'drawer' %} is-moved-by-drawer{% endif %}" id="PageContainer">
    <div class="page-wrap">
      {% section 'header' %}
      <div class="clear"></div>
      {% if template contains 'collection' %}
        {% if collection.description contains '[banner]' %}
          {% capture banner %}{{ collection.handle }}.jpg{% endcapture %}
          <div class="collection-banner">
            {% include 'collection-banner-image' %}
          </div>
        {% endif %}
      {% endif %}


      {% if template == 'index' or template contains 'blog' or template contains 'list-collections' %}
      <div data-page-content>
      	{{ content_for_layout }}
<limespot></limespot>
      </div>
      {% else %}
      {% if collection.title == 'NEW! Hi Vis Shirts'%}
      <div class="collection-banner hi-vis" style="background-image: url(https://cdn.shopify.com/s/files/1/0085/7807/2634/t/11/assets/hi-vis-banner.jpg?3596);">
        Cool. Calm. Protected.
      </div>
      {% endif %}
      {% if collection.title == 'Overshoes & Overboots'%}
      <div class="collection-banner overshoe" style="background-image: url(https://cdn.shopify.com/s/files/1/0085/7807/2634/t/11/assets/overshoe-banner-v2.jpg?3782);">
        <a href="https://www.tingleyrubber.com/pages/over-the-shoe-footwear-infographic" target="_blank">Wear your shoes. Protect them with Tingley. Get the Guide</a>
      </div>
      {% endif %}
      {% if collection.title == 'XXS/XS Safety Vests'%}
      <div class="collection-banner xxs-vests" style="background-image: url(https://cdn.shopify.com/s/files/1/0085/7807/2634/files/xxs-vest-banner.jpg?4214);">
        BIG visibility now comes in smaller sizes
      </div>
      {% endif %}
      {% if page.title == 'Shop All Products'%}
      <div class="collection-banner shop-all" style="background-image: url(https://cdn.shopify.com/s/files/1/0085/7807/2634/files/shop-all-banner.jpg?4202);">
        keep safe &amp; work on
      </div>
      {% endif %}
      <div id="content" class="row">
        {% if template != 'index' and template != 'page.infographic' %}
          {% if settings.breadcrumb %}
            {% include 'breadcrumb' %}
          {% endif %}
        {% endif %}
        <div data-page-content>
          {{ content_for_layout }}
<limespot></limespot>
        </div>
      </div>
      {% endif %}
    </div>  <!-- close the page-wrap class -->
    {% section 'footer' %}
  </div> <!-- close the shifter-page class -->


